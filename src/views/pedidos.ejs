<!DOCTYPE html>
<html lang="en">
    <%- include("partials/head") %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>


<body>
    <h1>Listado de Pedidos</h1>
    <div style="border: blue 1px solid;" class="container">
        <a href="./neworder" class="btn btn-outline-primary mt-4"><box-icon type='solid' name='plus-circle'></box-icon></a>
        <table class="table table-bordered table-striped text-cemter mt-4">
            <thead>
                <tr class="bg-primary text-white">
                    <th scope="col">ID</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Vendedor</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Total</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach((user) => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.cliente_id %></td>
                        <td><%= user.vendedor_id %></td>
                        <td><%= user.fecha_pedido %></td>
                        <td>$ <%= user.total %></td>
                        <td>
                            <a href="/edit/<%= user.id %>" class="btn btn-outline-warning"><box-icon type='solid' name='edit'></box-icon></a>
                            <a href="/delete/<%= user.id %>" class="btn btn-outline-danger"><box-icon type='solid' name='trash'></box-icon></a>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
        </table>
    </div>
    <!--Voy a usar iconos de boxicons-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <%- include("partials/footer") %>
</body>
</html>