<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
  <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>

  <body>
    <%- include("partials/header") %>
    <main>
      <div class="container">
        <h2 class="text-center mt-1">Gesti√≥n de Pedidos</h2>
        <button type="button" class="btn btn-secondary mt-1" onclick="window.location.href='./neworder'">
          <i class="bi bi-plus-circle"></i> Nuevo Pedido
        </button>
        
        <table class="table table-bordered table-striped text-cemter mt-1">
          <thead>
            <tr class="bg-primary text-white">
              <th scope="col">ID</th>
              <th scope="col">Cliente</th>
              <th scope="col">Vendedor</th>
              <th scope="col">Fecha</th>
              <th scope="col">Total</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% results.forEach((user) => { %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.cliente_id %></td>
              <td><%= user.vendedor_id %></td>
              <td><%= user.fecha_pedido %></td>
              <td>$ <%= user.total %></td>
              <td>
                <form
                  action="/pedidos<%= user.id %>"
                  method="GET"
                  class="d-inline"
                >
                  <button type="submit" class="btn btn-success btn-sm">
                    Ver
                  </button>
                </form>

                <form
                  action="/pedidos/<%= user.id %>?_method=DELETE"
                  method="POST"
                  style="display: inline"
                >
                  <button type="submit" class="btn btn-danger btn-sm">
                    Borrar
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
    <!--Voy a usar iconos de boxicons-->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <%- include("partials/footer") %>
  </body>
</html>
