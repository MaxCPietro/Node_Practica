<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head") %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <title>Gs de Clientes</title>
</head>
<body>
    <%- include("partials/header") %>
        <div class="container">
        <h1>Gesti√≥n de Clientes</h1>

            <a href="./newCliente" class="btn btn-outline-primary mt-4"><box-icon type='solid' name='plus-circle'></box-icon></a>
        <table class="table table-bordered table-striped text-cemter mt-4">
            <thead>
                <tr class="bg-primary text-white">
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Tipo de cliente</th>
                    <!--th scope="col">Acciones</th-->
                </tr>
            </thead>
            <tbody>
                <% results.forEach((user) => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.nombre %></td>
                        <td><%= user.tipo_cliente %></td>
                        <!--td>
                            <a href="/edit/<%= user.id %>" class="btn btn-outline-warning"><box-icon type='solid' name='edit'></box-icon></a>
                            <a href="/delete/<%= user.id %>" class="btn btn-outline-danger"><box-icon type='solid' name='trash'></box-icon></a>
                        </td-->
                    </tr>
                <% }) %>
                </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <%- include("partials/footer") %>
</body>
</html>